{% extends 'layouts/user_layout.html.twig' %}

{% block title %}Liste des Annonces - Passager{% endblock %}

{% block content %}
    <div class="w-full">
        <div class="glass-card bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-xl p-8 mb-8">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h1 class="text-3xl font-bold mb-2 text-gray-800">Liste des annonces disponibles</h1>
                    <p class="text-gray-600">Consultez les annonces de covoiturage et trouvez votre prochain déplacement.</p>
                </div>
            </div>

            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded" role="alert">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}

            <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="relative flex-grow max-w-md">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text" id="search" placeholder="Rechercher une annonce..." 
                           class="pl-10 w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-primary focus:border-primary">
                </div>
                <div class="flex-shrink-0">
                    <select id="sort" class="w-full md:w-auto px-4 py-2 border border-gray-300 rounded-xl focus:ring-primary focus:border-primary">
                        <option value="date_desc">Les plus récentes</option>
                        <option value="date_asc">Les plus anciennes</option>
                        <option value="price_asc">Prix croissant</option>
                        <option value="price_desc">Prix décroissant</option>
                    </select>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full bg-white rounded-xl overflow-hidden">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">TITRE</th>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">TRAJET</th>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">DATE</th>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">PLACES</th>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">PRIX</th>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">STATUT</th>
                            <th class="py-3 px-4 text-left text-gray-700 font-semibold">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if annonces is empty %}
                            <tr>
                                <td colspan="6" class="py-8 text-center text-gray-500">
                                    Aucune annonce trouvée. Réessayez plus tard ou modifiez vos critères de recherche.
                                </td>
                            </tr>
                        {% else %}
                            {% for annonce in annonces %}
                                <tr class="border-b border-gray-200 hover:bg-gray-50">
                                    <td class="py-3 px-4">
                                        <div class="font-medium text-gray-800">{{ annonce.titre }}</div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="text-gray-700">
                                            {{ annonce.trajet.getDeparturePoint() }} → {{ annonce.trajet.getArrivalPoint() }}
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="text-gray-700">
                                            {{ annonce.departureDate|date('d/m/Y H:i') }}
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="text-gray-700">
                                            {{ annonce.getAvailableSeats() }}
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="text-gray-700">
                                            {{ annonce.trajet.price }} €
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="text-gray-700">
                                            {% if annonce.status == 'ouvert' %}
                                                <span class="px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">
                                                    Ouvert
                                                </span>
                                            {% elseif annonce.status == 'plein' %}
                                                <span class="px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">
                                                    Plein
                                                </span>
                                            {% elseif annonce.status == 'termine' %}
                                                <span class="px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">
                                                    Terminé
                                                </span>
                                            {% else %}
                                                <span class="px-2 py-1 rounded-full text-xs bg-yellow-100 text-yellow-800">
                                                    {{ annonce.status }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="flex items-center space-x-2">
                                            {% if annonce.status != 'plein' and annonce.status != 'termine' %}
                                                <a href="{{ path('app_passager_reservation_create', {'id': annonce.id}) }}"
                                                   class="text-green-500 hover:text-green-700 font-medium">
                                                    <i class="fas fa-ticket-alt mr-1"></i> Réserver
                                                </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <div class="mt-6 flex justify-center">
                <nav class="flex items-center space-x-2">
                    <a href="#" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <a href="#" class="px-3 py-1 rounded border border-primary bg-primary text-white">1</a>
                    <a href="#" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-50">2</a>
                    <a href="#" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-50">3</a>
                    <a href="#" class="px-3 py-1 rounded border border-gray-300 text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </nav>
            </div>
        </div>
    </div>
{% endblock %} 