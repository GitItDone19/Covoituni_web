{% extends 'layouts/user_layout.html.twig' %}

{% block title %}Détail de ma réclamation{% endblock %}

{% block content %}
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Détail de ma réclamation</h1>
            <p class="text-gray-600">Consultez les informations de votre demande</p>
        </div>
        
        <div class="flex space-x-3">
            {% if reclamation.status == 'pending' %}
                <a href="{{ path('app_passager_reclamation_edit', {'id': reclamation.id}) }}" 
                   class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-xl shadow-md hover:bg-primary-dark transition-colors duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Modifier
                </a>
            {% endif %}
            
            <a href="{{ path('app_passager_reclamation_index') }}" 
               class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-xl shadow-md hover:bg-gray-300 transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="{% if label == 'success' %}bg-green-100 border-green-500 text-green-700{% else %}bg-red-100 border-red-500 text-red-700{% endif %} p-4 mb-6 rounded-md border-l-4">
                <div class="flex items-center">
                    {% if label == 'success' %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    {% else %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    {% endif %}
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="glass-card bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-xl overflow-hidden">
        <div class="border-l-4 
            {% if reclamation.status == 'resolved' %}
                border-green-500 bg-green-50
            {% elseif reclamation.status == 'in_progress' %}
                border-blue-500 bg-blue-50
            {% elseif reclamation.status == 'rejected' %}
                border-red-500 bg-red-50
            {% else %}
                border-yellow-500 bg-yellow-50
            {% endif %} 
            px-6 py-4">
            
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-bold text-gray-800">{{ reclamation.subject }}</h2>
                <span class="px-3 py-1 rounded-full text-xs font-semibold 
                    {% if reclamation.status == 'resolved' %}
                        bg-green-500 text-white
                    {% elseif reclamation.status == 'in_progress' %}
                        bg-blue-500 text-white
                    {% elseif reclamation.status == 'rejected' %}
                        bg-red-500 text-white
                    {% else %}
                        bg-yellow-500 text-white
                    {% endif %}">
                    {{ reclamation.status == 'resolved' ? 'Résolu' : 
                       (reclamation.status == 'in_progress' ? 'En cours' : 
                       (reclamation.status == 'rejected' ? 'Rejeté' : 'En attente')) }}
                </span>
            </div>
            
            <p class="text-sm text-gray-500 mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Soumis le {{ reclamation.date|date('d/m/Y à H:i') }}
            </p>
        </div>
        
        <div class="p-6">
            <div class="mb-8">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Description</h3>
                <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                    <p class="text-gray-700 whitespace-pre-line">{{ reclamation.description }}</p>
                </div>
            </div>
            
            {% if reclamation.reply %}
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Réponse de l'administration</h3>
                    <div class="bg-blue-50 p-4 rounded-xl border border-blue-100">
                        <p class="text-gray-700 whitespace-pre-line">{{ reclamation.reply }}</p>
                    </div>
                </div>
            {% else %}
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Réponse de l'administration</h3>
                    <div class="bg-gray-100 p-4 rounded-xl border border-gray-200">
                        <p class="text-gray-500 italic">Aucune réponse pour le moment. Nous traiterons votre demande dans les plus brefs délais.</p>
                    </div>
                </div>
            {% endif %}
            
            <div class="flex justify-between items-center mt-8 pt-4 border-t border-gray-100">
                <div class="text-sm text-gray-500">
                    <span class="font-medium">ID de réclamation:</span> #{{ reclamation.id }}
                </div>
                
                <div class="flex space-x-3">
                    {% if reclamation.status == 'pending' %}
                        <a href="{{ path('app_passager_reclamation_edit', {'id': reclamation.id}) }}" 
                           class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-xl shadow-md hover:bg-primary-dark transition-colors duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Modifier ma réclamation
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 