{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                {# Affichage des messages flash #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show mb-4" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h1 class="h3 mb-0">Reclamation Details</h1>
                                <span class="badge bg-{{ reclamation.status == 'resolved' ? 'success' : 
                                    (reclamation.status == 'in_progress' ? 'info' : 
                                    (reclamation.status == 'rejected' ? 'danger' : 'warning')) }}">
                                    {{ reclamation.status|capitalize }}
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                    <h4 class="border-bottom pb-2">{{ reclamation.subject }}</h4>
                                    <p class="text-muted">
                                        <small>Submitted on: {{ reclamation.date ? reclamation.date|date('F d, Y') : '' }}</small>
                                    </p>
                                </div>
                                
                                <div class="mb-4">
                                    <h5>Description:</h5>
                                    <div class="p-3 bg-light rounded">
                                        {{ reclamation.description|nl2br }}
                                    </div>
                                </div>
                                
                                {% if reclamation.reply %}
                                    <div class="mb-4">
                                        <h5>Admin Response:</h5>
                                        <div class="p-3 bg-light rounded border-left border-primary border-4">
                                            {{ reclamation.reply|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}
                                
                                <div class="d-flex justify-content-between mt-4">
                                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i> Back to list
                                    </a>
                                    
                                    <div>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('admin_reclamations_show', {'id': reclamation.id}) }}" class="btn btn-primary">
                                                <i class="fas fa-reply me-1"></i> RÃ©pondre
                                            </a>
                                        {% elseif reclamation.status == 'pending' %}
                                            <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-secondary">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 