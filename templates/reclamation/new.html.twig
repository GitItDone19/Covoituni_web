{% extends 'base.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block body %}
    <div class="reclamation-container container">
        <h1 class="reclamation-title text-center">Create New Reclamation</h1>

        <div class="reclamation-card card mb-4">
            <div class="reclamation-card-body">
                {{ form_start(form, {'attr': {'class': 'mt-3 needs-validation reclamation-form-centered'}}) }}
                    
                    {% if form_errors(form) %}
                        <div class="alert alert-danger text-center">
                            <h5>Form Errors:</h5>
                            {{ form_errors(form) }}
                            
                            {# Show individual field errors #}
                            {% for field, errors in form.children %}
                                {% for error in errors.vars.errors %}
                                    <div>{{ field }}: {{ error.message }}</div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    {% endif %}
                    
                    <div class="mb-3">
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'reclamation-form-label required'}}) }}
                        {{ form_widget(form.subject) }}
                        {% if form_errors(form.subject) %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.subject) }}
                            </div>
                        {% endif %}
                        <small class="form-text text-muted">{{ form_help(form.subject) }}</small>
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'reclamation-form-label required'}}) }}
                        {{ form_widget(form.description) }}
                        {% if form_errors(form.description) %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                        <small class="form-text text-muted">{{ form_help(form.description) }}</small>
                    </div>
                    
                    <div class="text-center mt-4">
                        <button type="submit" class="btn reclamation-btn reclamation-btn-primary btn-submit-animate mx-2">
                            <i class="fas fa-paper-plane me-1"></i> Submit
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        
        <div class="text-center mt-4 mb-4 reclamation-buttons">
            <a href="{{ path('app_reclamation_index') }}" class="btn reclamation-btn reclamation-btn-secondary mx-2">
                <i class="fas fa-list me-1"></i> View Reclamations
            </a>
        </div>
        
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-4 text-center">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    
    <style>
        .required:after {
            content: " *";
            color: #e74c3c;
        }
        
        .reclamation-title:after {
            left: 50%;
            transform: translateX(-50%);
        }
        
        .reclamation-buttons .btn {
            min-width: 150px;
            margin: 0 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %} 