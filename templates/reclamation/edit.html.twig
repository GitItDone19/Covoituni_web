{% extends 'base.html.twig' %}

{% block title %}Modifier ma réclamation{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                {# Affichage des messages flash #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show mb-4" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Modifier ma réclamation</h4>
                        <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
                        </a>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            {{ form_errors(form) }}
                            
                            <div class="mb-3">
                                {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.subject) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-secondary">
                                    <i class="fas fa-eye mr-1"></i> Voir les détails
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save mr-1"></i> Enregistrer les modifications
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 