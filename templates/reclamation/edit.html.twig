{% extends 'base.html.twig' %}

{% block title %}Edit Reclamation{% endblock %}

{% block body %}
    <div class="reclamation-container container">
        <h1 class="reclamation-title text-center">Edit Reclamation</h1>

        <div class="reclamation-card card mb-4">
            <div class="reclamation-card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Reclamation #{{ reclamation.id }}</h5>
                <span class="reclamation-badge badge badge-{{ reclamation.state }}">
                    {{ reclamation.state }}
                </span>
            </div>
            <div class="reclamation-card-body">
                {{ form_start(form, {'attr': {'class': 'mt-3 needs-validation reclamation-form-centered'}}) }}
                    
                    {% if form_errors(form) %}
                        <div class="alert alert-danger text-center">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                    
                    <div class="mb-3">
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'reclamation-form-label required'}}) }}
                        {{ form_widget(form.subject) }}
                        {% if form_errors(form.subject) %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.subject) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'reclamation-form-label required'}}) }}
                        {{ form_widget(form.description) }}
                        {% if form_errors(form.description) %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="text-center mt-4">
                        <button type="submit" class="btn reclamation-btn reclamation-btn-primary btn-submit-animate mx-2">
                            <i class="fas fa-save me-1"></i> Update
                        </button>
                    </div>
                    
                {{ form_end(form) }}
            </div>
        </div>
        
        <div class="text-center mt-4 mb-4 reclamation-buttons">
            <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn reclamation-btn reclamation-btn-secondary mx-2">
                <i class="fas fa-eye me-1"></i> View
            </a>
            <a href="{{ path('app_reclamation_index') }}" class="btn reclamation-btn-outline mx-2">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
        
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-4 text-center">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %} 