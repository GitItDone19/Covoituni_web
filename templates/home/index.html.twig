{% extends 'base.html.twig' %}

{% block title %}CovoitUni - University Carpooling{% endblock %}

{% block body %}
    {# Hero Section #}
    <div class="relative min-h-screen w-full flex items-center justify-center overflow-hidden">
        {# Background Image with Parallax Effect #}
        <div class="absolute inset-0 z-0">
            <img src="https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2021&q=80" 
                 alt="Background" 
                 class="w-full h-full object-cover scale-110 motion-safe:animate-subtle-zoom">
            <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-primary/40 mix-blend-multiply"></div>
        </div>

        {# Decorative Elements #}
        <div class="absolute top-20 left-10 w-64 h-64 bg-primary/20 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
        <div class="absolute bottom-20 right-10 w-64 h-64 bg-primary-light/20 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
        <div class="absolute bottom-40 left-1/4 w-64 h-64 bg-primary-dark/20 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>

        {# Content #}
        <div class="relative z-10 container mx-auto px-4 text-center">
            <h1 class="hero-title text-6xl md:text-7xl lg:text-8xl font-extrabold mb-8 text-white drop-shadow-2xl tracking-tight">
                Find Your Perfect
                <span class="block mt-2 bg-clip-text text-transparent bg-gradient-to-r from-primary-light via-primary to-primary-dark animate-gradient-x">University Ride</span>
            </h1>
            <p class="hero-subtitle text-xl md:text-2xl lg:text-3xl mb-12 text-white/90 max-w-3xl mx-auto leading-relaxed">Connect with fellow students for safe and affordable carpooling</p>
            <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-6">
                <a href="{{ path('app_rides') }}" 
                   class="group inline-flex items-center px-8 py-4 text-lg font-medium text-white bg-gradient-to-r from-primary to-primary-dark rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 group-hover:animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    Find a Ride
                </a>
                <a href="{{ path('app_register') }}" 
                   class="group inline-flex items-center px-8 py-4 text-lg font-medium border-2 border-white text-white hover:bg-white hover:text-primary rounded-xl transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 group-hover:animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                    Sign Up Now
                </a>
            </div>
        </div>

        {# Animated Scroll Indicator #}
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
            <div class="p-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
            </div>
        </div>
    </div>

    {# Search Section - Bolt Inspired #}
    <section class="relative -mt-20 z-20 container mx-auto px-4">
        <div class="bg-white rounded-2xl shadow-2xl p-6 md:p-8">
            <form class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 mb-1">From</label>
                    <input type="text" placeholder="Enter pickup location" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary-ultra-light transition-all">
                    <span class="absolute right-3 top-9 text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        </svg>
                    </span>
                </div>
                <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
                    <input type="text" placeholder="Enter destination" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary-ultra-light transition-all">
                    <span class="absolute right-3 top-9 text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        </svg>
                    </span>
                </div>
                <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 mb-1">When</label>
                    <input type="datetime-local" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary-ultra-light transition-all">
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full bg-gradient-to-r from-primary to-primary-dark text-white font-medium px-6 py-3 rounded-xl hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300">
                        Search Rides
                    </button>
                </div>
            </form>
        </div>
    </section>

    {# How It Works Section - Bolt Inspired #}
    <section class="py-24 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">
                How <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-dark">CovoitUni</span> Works
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-6">
                        <div class="absolute inset-0 bg-primary/20 rounded-2xl rotate-6"></div>
                        <div class="absolute inset-0 bg-white rounded-2xl shadow-lg flex items-center justify-center">
                            <span class="text-4xl font-bold text-primary">1</span>
                        </div>
                    </div>
                    <h3 class="text-xl font-semibold mb-4">Enter Your Route</h3>
                    <p class="text-gray-600">Simply enter your pickup and drop-off locations to find available rides</p>
                </div>
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-6">
                        <div class="absolute inset-0 bg-primary/20 rounded-2xl rotate-6"></div>
                        <div class="absolute inset-0 bg-white rounded-2xl shadow-lg flex items-center justify-center">
                            <span class="text-4xl font-bold text-primary">2</span>
                        </div>
                    </div>
                    <h3 class="text-xl font-semibold mb-4">Choose Your Ride</h3>
                    <p class="text-gray-600">Browse through available rides and select the one that suits you best</p>
                </div>
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-6">
                        <div class="absolute inset-0 bg-primary/20 rounded-2xl rotate-6"></div>
                        <div class="absolute inset-0 bg-white rounded-2xl shadow-lg flex items-center justify-center">
                            <span class="text-4xl font-bold text-primary">3</span>
                        </div>
                    </div>
                    <h3 class="text-xl font-semibold mb-4">Enjoy Your Journey</h3>
                    <p class="text-gray-600">Travel comfortably with verified university students and save money</p>
                </div>
            </div>
        </div>
    </section>

    {# Safety Features Section - Bolt Inspired #}
    <section class="py-24 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div>
                    <h2 class="text-4xl font-bold mb-8">Your Safety is Our <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-dark">Priority</span></h2>
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 bg-primary-ultra-light rounded-xl flex items-center justify-center mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold mb-2">Verified University Students</h3>
                                <p class="text-gray-600">All drivers and passengers are verified members of the university community</p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 bg-primary-ultra-light rounded-xl flex items-center justify-center mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold mb-2">Secure Payments</h3>
                                <p class="text-gray-600">All transactions are processed securely through our platform</p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-12 h-12 bg-primary-ultra-light rounded-xl flex items-center justify-center mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold mb-2">24/7 Support</h3>
                                <p class="text-gray-600">Our support team is always available to help you with any issues</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="relative">
                    <div class="absolute inset-0 bg-gradient-to-r from-primary-ultra-light to-transparent rounded-3xl transform -rotate-6"></div>
                    <img src="https://images.unsplash.com/photo-1557426272-fc759fdf7a8d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" 
                         alt="Safety First" 
                         class="relative rounded-3xl shadow-2xl">
                </div>
            </div>
        </div>
    </section>

    {# Mobile App Section - Bolt Inspired #}
    <section class="py-24 bg-gradient-to-br from-primary-ultra-light via-white to-primary-ultra-light/30">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div class="order-2 lg:order-1 relative">
                    <div class="relative z-10 transform hover:rotate-2 transition-transform duration-500">
                        <img src="https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" 
                             alt="Mobile App" 
                             class="rounded-3xl shadow-2xl">
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-primary-dark/20 rounded-3xl transform rotate-6 blur-xl"></div>
                </div>
                <div class="order-1 lg:order-2">
                    <h2 class="text-4xl font-bold mb-8">Get Our Mobile App</h2>
                    <p class="text-xl text-gray-600 mb-8">Download our mobile app to access university carpooling services on the go. Available for iOS and Android.</p>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="#" class="flex items-center px-6 py-3 bg-black text-white rounded-xl hover:bg-gray-900 transition-colors">
                            <svg class="h-8 w-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M17.05 20.28c-.98.954-2.035 1.949-3.49 1.949-1.457 0-1.874-.85-3.5-.85-1.628 0-2.052.865-3.51.865-1.457 0-2.512-.995-3.49-1.949-2.069-2.082-3.49-5.444-3.49-8.59 0-5.356 3.49-8.135 6.98-8.135 1.745 0 3.49 1.195 4.51 1.195 1.02 0 2.766-1.195 4.51-1.195 3.49 0 6.98 2.779 6.98 8.135 0 3.146-1.421 6.508-3.49 8.59zM12.05 6.695c-.196-1.195.785-2.39 1.726-3.084.942-.694 2.512-1.195 3.49-.498.196 1.195-.785 2.39-1.726 3.084-.942.694-2.512 1.195-3.49.498z"/>
                            </svg>
                            <div>
                                <div class="text-xs">Download on the</div>
                                <div class="text-xl font-semibold font-sans">App Store</div>
                            </div>
                        </a>
                        <a href="#" class="flex items-center px-6 py-3 bg-black text-white rounded-xl hover:bg-gray-900 transition-colors">
                            <svg class="h-8 w-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M3.609 1.814L13.792 12 3.61 22.186a2.372 2.372 0 01-.497-.755 2.386 2.386 0 01-.254-1.081V3.65c0-.374.085-.738.254-1.08.17-.344.41-.64.497-.756zm15.129 8.416l3.477-2.006-4.018-2.3-3.138 3.138 3.679 1.168zm.861.861l-3.681 1.17 3.139 3.138 4.018-2.301-3.476-2.007zM5.885 1.058L15.128 6.21l3.477-2.006C17.867 3.39 15.764 2.377 13.445 1.33a24.033 24.033 0 00-7.56-.272zm0 21.884a24.03 24.03 0 007.56-.272c2.319-1.047 4.422-2.06 5.16-1.874l-3.477-2.006-9.243 5.152z"/>
                            </svg>
                            <div>
                                <div class="text-xs">GET IT ON</div>
                                <div class="text-xl font-semibold font-sans">Google Play</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Latest Rides Section #}
    <section class="relative py-24 w-full bg-gradient-to-b from-white to-primary-ultra-light/30">
        <div class="container mx-auto px-4">
            <div class="flex flex-col sm:flex-row justify-between items-center mb-16">
                <h2 class="section-title text-4xl md:text-5xl font-bold text-text-dark mb-4 sm:mb-0">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-dark">Latest</span> Rides
                </h2>
                <a href="{{ path('app_rides') }}" class="group flex items-center text-primary hover:text-primary-dark font-medium transition-all border border-primary/20 hover:border-primary px-4 py-2 rounded-full">
                    View All
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for ride in latest_rides %}
                    <div class="group bg-white backdrop-blur-md bg-opacity-80 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 hover:border-primary/20">
                        <div class="flex justify-between items-start mb-6">
                            <h3 class="font-semibold text-xl group-hover:text-primary transition-colors duration-300">{{ ride.titre }}</h3>
                            <span class="px-4 py-1 bg-primary-ultra-light text-primary rounded-full text-sm font-medium shadow-sm">{{ ride.trajet.price }}€</span>
                        </div>
                        <div class="space-y-5">
                            <div class="flex items-center">
                                <span class="w-12 h-12 flex items-center justify-center bg-primary-ultra-light rounded-full mr-4 text-primary group-hover:scale-110 transition-transform">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    </svg>
                                </span>
                                <div>
                                    <p class="text-sm text-gray-500 uppercase tracking-wide">From</p>
                                    <p class="font-medium text-lg">{{ ride.trajet.departurePoint }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <span class="w-12 h-12 flex items-center justify-center bg-primary-ultra-light rounded-full mr-4 text-primary group-hover:scale-110 transition-transform">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    </svg>
                                </span>
                                <div>
                                    <p class="text-sm text-gray-500 uppercase tracking-wide">To</p>
                                    <p class="font-medium text-lg">{{ ride.trajet.arrivalPoint }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <span class="w-12 h-12 flex items-center justify-center bg-primary-ultra-light rounded-full mr-4 text-primary group-hover:scale-110 transition-transform">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </span>
                                <div>
                                    <p class="text-sm text-gray-500 uppercase tracking-wide">Date</p>
                                    <p class="font-medium text-lg">{{ ride.departureDate|date('d M Y H:i') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-8 flex justify-between items-center">
                            <span class="inline-flex items-center px-4 py-2 bg-primary-ultra-light text-primary rounded-full text-sm font-medium">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                </svg>
                                {{ ride.availableSeats }} seats
                            </span>
                            <a href="{{ path('app_rides_show', {'id': ride.id}) }}" 
                               class="inline-flex items-center px-4 py-2 rounded-full border border-primary/30 text-primary hover:text-white hover:bg-primary transition-all duration-300 group">
                                View Details
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-3 bg-white backdrop-blur-md bg-opacity-80 rounded-2xl p-12 text-center border border-gray-100 shadow-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        <p class="text-gray-500 text-xl">No rides available at the moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Features Section #}
    <section class="relative py-32 w-full overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-ultra-light/40 to-white"></div>
        <div class="container mx-auto px-4 relative z-10">
            <h2 class="section-title text-4xl md:text-5xl font-bold text-center mb-20">
                Why Choose <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-dark">CovoitUni</span>?
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-16">
                <div class="feature-box text-center group p-8 rounded-2xl hover:bg-white/80 hover:shadow-xl transition-all duration-300 border border-transparent hover:border-gray-100">
                    <div class="relative w-20 h-20 mx-auto mb-6">
                        <div class="absolute inset-0 bg-gradient-to-r from-primary to-primary-dark rounded-2xl opacity-20 group-hover:opacity-30 blur-xl transition-opacity"></div>
