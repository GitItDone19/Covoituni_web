{% extends 'base.html.twig' %}

{% block title %}Driver Review{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">Driver Review</h1>
                        <div class="star-rating-display">
                            {% for i in 1..5 %}
                                <i class="fas fa-star {{ i <= avi.rating ? 'active' : '' }}"></i>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="driver-info mb-4">
                            <h5><i class="fas fa-user-circle me-2"></i> Driver</h5>
                            <p class="text-muted fs-5 fw-bold">{{ avi.conducteur ? avi.conducteur.nom : 'Not specified' }}</p>
                        </div>
                        
                        <div class="mb-4">
                            <h5><i class="fas fa-comment me-2"></i> Comment</h5>
                            <div class="comment-box p-3 bg-light rounded">
                                {{ avi.commentaire ? '<p class="mb-0">' ~ avi.commentaire ~ '</p>' : '<p class="text-muted mb-0">No comment provided</p>' }}
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_avis_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to list
                            </a>
                            <div>
                                <a href="{{ path('app_avis_edit', {'id': avi.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                {{ include('avis/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <style>
        .star-rating-display {
            font-size: 1.8rem;
            color: #ddd;
            display: flex;
            gap: 5px;
        }
        
        .star-rating-display .fa-star.active {
            color: #ffcc00;
            text-shadow: 0px 0px 3px rgba(255, 204, 0, 0.4);
        }
        
        .comment-box {
            border-left: 4px solid #17a2b8;
        }
        
        .driver-info {
            border-bottom: 1px solid #eee;
            padding-bottom: 1rem;
        }
    </style>
{% endblock %} 