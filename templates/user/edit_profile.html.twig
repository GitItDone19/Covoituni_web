{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold mb-8">Edit Your Profile</h1>
            
            {% for flashError in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                    {{ flashError }}
                </div>
            {% endfor %}
            
            {% for flashSuccess in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
                    {{ flashSuccess }}
                </div>
            {% endfor %}
            
            <div class="bg-white shadow-md rounded-lg p-8">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-6">
                        <label for="username" class="block text-gray-700 font-semibold mb-2">Username</label>
                        <input type="text" id="username" name="username" value="{{ user.username }}" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label for="prenom" class="block text-gray-700 font-semibold mb-2">First Name</label>
                            <input type="text" id="prenom" name="prenom" value="{{ user.prenom }}" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                        </div>
                        
                        <div>
                            <label for="nom" class="block text-gray-700 font-semibold mb-2">Last Name</label>
                            <input type="text" id="nom" name="nom" value="{{ user.nom }}" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                        </div>
                    </div>
                    
                    <div class="mb-6">
                        <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
                        <input type="email" id="email" name="email" value="{{ user.email }}" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                    </div>
                    
                    <div class="mb-6">
                        <label for="tel" class="block text-gray-700 font-semibold mb-2">Phone Number</label>
                        <input type="tel" id="tel" name="tel" value="{{ user.tel }}" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                    </div>
                    
                    <div class="mb-6">
                        <label for="profileImage" class="block text-gray-700 font-semibold mb-2">Profile Picture</label>
                        <div class="flex items-center">
                            {% if user.imagePath %}
                                <div class="mr-4">
                                    <img src="{{ asset(user.imagePath) }}" alt="{{ user.username }}" class="w-16 h-16 rounded-full object-cover">
                                </div>
                            {% endif %}
                            <input type="file" id="profileImage" name="profileImage" class="w-full">
                        </div>
                    </div>
                    
                    <div class="flex justify-between mt-8">
                        <a href="{{ path('app_user_profile') }}" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">Cancel</a>
                        <button type="submit" class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 