{# Add JavaScript for the menu functionality #}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.getElementById('menuToggle');
        const closeMenu = document.getElementById('closeMenu');
        const offcanvasMenu = document.querySelector('.offcanvas-menu');
        const offcanvasBackdrop = document.querySelector('.offcanvas-backdrop');
        const body = document.body;

        menuToggle.addEventListener('click', function() {
            offcanvasMenu.classList.add('active');
            offcanvasBackdrop.classList.add('active');
            body.classList.add('menu-open');
        });

        function closeOffcanvasMenu() {
            offcanvasMenu.classList.remove('active');
            offcanvasBackdrop.classList.remove('active');
            body.classList.remove('menu-open');
        }

        closeMenu.addEventListener('click', closeOffcanvasMenu);
        offcanvasBackdrop.addEventListener('click', closeOffcanvasMenu);
        
        // Set current date
        const currentDateElement = document.getElementById('currentDate');
        const now = new Date();
        currentDateElement.textContent = now.toLocaleDateString('fr-FR', { 
            weekday: 'long', 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
        });
        
        // Refresh button functionality
        document.getElementById('refreshStats').addEventListener('click', function() {
            this.classList.add('animate-pulse');
            setTimeout(() => {
                window.location.reload();
            }, 300);
        });
        
        // Initialize charts
        initUserGrowthChart();
        initRideActivityChart();
        initReclamationStatusChart();
        initRatingDistributionChart();
    });
    
    // User Growth Chart
    function initUserGrowthChart() {
        const ctx = document.getElementById('userGrowthChart').getContext('2d');
        
        // User growth data (can be replaced with real data from controller)
        const userData = {
            labels: {{ stats.user_growth.labels|json_encode|raw }},
            datasets: [
                {
                    label: 'Nouveaux utilisateurs',
                    data: {{ stats.user_growth.data|json_encode|raw }},
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }
            ]
        };
        
        new Chart(ctx, {
            type: 'line',
            data: userData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    }
    
    // Ride Activity Chart
    function initRideActivityChart() {
        const ctx = document.getElementById('rideActivityChart').getContext('2d');
        
        // Ride activity data
        const rideData = {
            labels: {{ stats.ride_activity.labels|json_encode|raw }},
            datasets: [
                {
                    label: 'Trajets',
                    data: {{ stats.ride_activity.rides|json_encode|raw }},
                    borderColor: '#10b981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                },
                {
                    label: 'Réservations',
                    data: {{ stats.ride_activity.bookings|json_encode|raw }},
                    borderColor: '#8b5cf6',
                    backgroundColor: 'rgba(139, 92, 246, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }
            ]
        };
        
        new Chart(ctx, {
            type: 'line',
            data: rideData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top'
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    }
    
    // Reclamation Status Chart
    function initReclamationStatusChart() {
        const ctx = document.getElementById('reclamationStatusChart').getContext('2d');
        
        // Reclamation status data
        const reclamationData = {
            labels: ['En attente', 'En cours', 'Résolues', 'Rejetées'],
            datasets: [{
                data: [
                    {{ stats.reclamations.pending }}, 
                    {{ stats.reclamations.in_progress }}, 
                    {{ stats.reclamations.resolved }}, 
                    {{ stats.reclamations.rejected }}
                ],
                backgroundColor: [
                    'rgba(245, 158, 11, 0.7)', // amber
                    'rgba(59, 130, 246, 0.7)', // blue
                    'rgba(16, 185, 129, 0.7)', // green
                    'rgba(239, 68, 68, 0.7)'   // red
                ],
                borderWidth: 1
            }]
        };
        
        new Chart(ctx, {
            type: 'doughnut',
            data: reclamationData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                },
                cutout: '70%'
            }
        });
    }
    
    // Rating Distribution Chart
    function initRatingDistributionChart() {
        const ctx = document.getElementById('ratingDistributionChart').getContext('2d');
        
        // Rating distribution data
        const ratingData = {
            labels: ['1 étoile', '2 étoiles', '3 étoiles', '4 étoiles', '5 étoiles'],
            datasets: [{
                label: 'Nombre d\'avis',
                data: {{ stats.avis.distribution|json_encode|raw }},
                backgroundColor: [
                    'rgba(239, 68, 68, 0.7)',    // red
                    'rgba(245, 158, 11, 0.7)',   // amber
                    'rgba(249, 115, 22, 0.7)',   // orange
                    'rgba(16, 185, 129, 0.7)',   // green
                    'rgba(5, 150, 105, 0.7)'     // emerald
                ],
                borderWidth: 1
            }]
        };
        
        new Chart(ctx, {
            type: 'bar',
            data: ratingData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    }
</script>
