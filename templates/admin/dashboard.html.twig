{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Offcanvas menu styles */
        .offcanvas-menu {
            position: fixed;
            top: 0;
            left: -300px;
            width: 300px;
            height: 100%;
            background: white;
            z-index: 1050;
            transition: all 0.3s ease;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            overflow-y: auto;
        }
        
        .offcanvas-menu.active {
            left: 0;
        }
        
        .offcanvas-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1040;
            display: none;
        }
        
        .offcanvas-backdrop.active {
            display: block;
        }
        
        body.menu-open {
            overflow: hidden;
        }
    </style>
{% endblock %}

