<a href="{{ path('admin_reclamation') }}" class="nav-link{{ app.request.get('_route') starts with 'admin_reclamation' ? ' active' : '' }}">
    <i class="fas fa-exclamation-triangle me-2"></i> Gestion Réclamations
</a>

{% if app.request.get('_route') starts with 'admin_reclamation' %}
    <div class="ps-4 mt-2">
        <a href="{{ path('admin_reclamation') }}" class="nav-link sub-link{{ app.request.query.get('filter') is null ? ' active' : '' }}">
            <i class="fas fa-list-ul me-2"></i> Toutes les réclamations
        </a>
        <a href="{{ path('admin_reclamation', {'filter': 'pending'}) }}" class="nav-link sub-link{{ app.request.query.get('filter') == 'pending' ? ' active' : '' }}">
            <i class="fas fa-hourglass-half me-2 text-warning"></i> En attente
        </a>
        <a href="{{ path('admin_reclamation', {'filter': 'in_progress'}) }}" class="nav-link sub-link{{ app.request.query.get('filter') == 'in_progress' ? ' active' : '' }}">
            <i class="fas fa-spinner me-2 text-primary"></i> En cours
        </a>
        <a href="{{ path('admin_reclamation', {'filter': 'resolved'}) }}" class="nav-link sub-link{{ app.request.query.get('filter') == 'resolved' ? ' active' : '' }}">
            <i class="fas fa-check-circle me-2 text-success"></i> Résolues
        </a>
        <a href="{{ path('admin_reclamation', {'filter': 'rejected'}) }}" class="nav-link sub-link{{ app.request.query.get('filter') == 'rejected' ? ' active' : '' }}">
            <i class="fas fa-times-circle me-2 text-danger"></i> Rejetées
        </a>
    </div>
{% endif %} 